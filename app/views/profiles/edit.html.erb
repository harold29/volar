<h1>Edit Profile</h1>

<%= form_with(model: @profile, local: true) do |form| %>

  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :phone_number_1 %>
    <%= form.telephone_field :phone_number_1 %>
  </div>

  <div>
    <%= form.label :phone_number_2 %>
    <%= form.telephone_field :phone_number_2 %>
  </div>

  <div>
    <%= form.label :gender %>
    <%= form.select :gender, ['Male', 'Female', 'Other'] %>
  </div>

  <div>
    <%= form.label :birthday %>
    <%= form.date_field :birthday %>
  </div>

  <div>
    <%= form.submit "Update Profile" %>
  </div>
<% end %>

<%= link_to 'Back to Profile', profile_path(@profile) %>